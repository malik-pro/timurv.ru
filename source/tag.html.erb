<% content_for(:title, tagname) %>

<div id="home">
  <ul class="posts">
    <h1><%= tagname %></h1>

    <% page_articles.each_with_index do |article, i| %>
      <li>
        <span><%= date(article.date) %></span> &raquo;
        <%= link_to(article.title, article) %>
      </li>
    <% end %>
  </ul>

  <%= partial 'partials/tags' %>
</div>
